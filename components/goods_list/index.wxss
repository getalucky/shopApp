.goodsItem{
  display: flex;
  align-items: center;
  width: 100%;
  height: 209rpx;
  margin: 15rpx auto;
}
.goodsIcon{
  width: 191rpx;
  height: 191rpx;
}
.goodsContent{
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  flex: 1;
  box-sizing: border-box;
  padding: 20rpx 20rpx 20rpx 30rpx;
  height: 100%;
}
.goodsTitle{
  font-size: 24rpx;
  overflow: hidden;

  text-overflow: ellipsis;
  
  /* 弹性伸缩盒子模型显示 */
  
  display: -webkit-box;
  
  /* 限制在一个块元素显示的文本的行数 */
  
  -webkit-line-clamp: 2;
  
  /* 设置或检索伸缩盒对象的子元素的排列方式 */
  
  -webkit-box-orient: vertical;
}
.goodsPice{
  font-size: 24rpx;
  color: #EA4350;
}
.goodsPice::before{
  content: "￥";
  font-size: 80%;
}