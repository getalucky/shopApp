.main{
  display: flex;
  height: calc(100vh - 100rpx);
}
.goodsTab{
  width: 182rpx;
  background-color: #F3F3F3;
}
.goodsTab view{
  position: relative;
  display: flex;
  justify-content: center;
  align-items: center;
  height: 80rpx;
  font-size: 30rpx;
}

.goodsTab .active{
  color: #EA4350;
}
.goodsTab .active::before{
  content: "";
  width: 8rpx;
  height: 60%;
  background-color: #EA4350;
  position: absolute;
  left: 0;
}

.allGoodsItem{
  flex: 1;
  /* background-color: goldenrod; */
}



.goodsItem{
  display: flex;
  flex-wrap: wrap;
}

.goodsTitle{
  margin: 30rpx 0;
  color: #575757;
  font-size: 34rpx;
  text-align: center;
}

.goodsTitle::before{
  content: "/";
  margin-right: 20rpx;
}

.goodsTitle::after{
  content: "/";
  margin-left: 20rpx;
}

.goodsItem .goodsIcon_Text{
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 33.33%;
  margin: 10rpx 0;
}

.goodsItem .goodsIcon_Text image{
  width: 120rpx;
  height: 120rpx;
}

.goodsItem .goodsIcon_Text text{
  font-size: 24rpx;
}